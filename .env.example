# Port configuration
NGINX_PORT="80"

# Backend configuration
APP_NAME="Value at Risk API"
API_V1_STR="/api/v1"
CORS_ORIGINS='["http://localhost:3000","http://localhost:3100"]'
DATABASE_URL="sqlite:///./var_demo.db"

# Frontend configuration
# Use `/api/v1` when running behind the nginx proxy defined in docker-compose.
NUXT_PUBLIC_API_BASE_URL="/api/v1"
NUXT_PUBLIC_NEWS_LIMIT="5"
NUXT_PUBLIC_REFRESH_INTERVAL_MS="60000"
NUXT_PUBLIC_HMR_HOST="localhost"
NUXT_PUBLIC_HMR_PORT="80"
