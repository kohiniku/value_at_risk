# Port configuration
NGINX_PORT="80"

# Backend configuration
APP_NAME="Value at Risk API"
API_V1_STR="/api/v1"
CORS_ORIGINS='["http://localhost:3000","http://localhost:3100"]'
DATABASE_URL="sqlite:///./var_demo.db"

# Frontend configuration
# Use `/api/v1` when running behind the nginx proxy defined in docker-compose.
NEXT_PUBLIC_API_BASE_URL="/api/v1"
NEXT_PUBLIC_NEWS_LIMIT="5"
NEXT_PUBLIC_REFRESH_INTERVAL_MS="60000"

# Container image configuration
# `docker buildx bake` reads these values to tag images, and `docker compose`
# uses the same defaults when running the stack.
IMAGE_REGISTRY=""
BACKEND_IMAGE="value-at-risk-backend"
BACKEND_TAG="latest"
FRONTEND_IMAGE="value-at-risk-frontend"
FRONTEND_TAG="latest"
